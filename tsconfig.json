{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rewriteRelativeImportExtensions": true
  },
  "include": ["bin/**/*.ts", "tests/**/*.ts", "benchmarks/**/*.ts", "eslint.config.ts"]
}
